{
  "database": {
    "rules": "database-rules.json"
  },
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "**/mmlplus/**"
    ],
    "cleanUrls": true,
    "trailingSlashes": false,
    "rewrites": [
      {
        "source": "**/mmlplus-embed/**",
        "destination": "?embed"
      }
    ]
  }
}
